{
  "name": "rohlik-mcp-no-auth",
  "version": "2.0.0-no-auth",
  "type": "module",
  "description": "MCP server for Rohlik.cz grocery shopping - Modified to allow optional authentication",
  "keywords": [
    "mcp",
    "rohlik",
    "grocery",
    "shopping",
    "api",
    "no-auth"
  ],
  "author": "Modified fork - Original by Tomas Pavlin",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomaspavlin/rohlik-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/tomaspavlin/rohlik-mcp/issues"
  },
  "homepage": "https://github.com/tomaspavlin/rohlik-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/*.js",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:legacy": "npm run build && node tests/test-cart-flow.mjs",
    "inspect": "npm run build && npx @modelcontextprotocol/inspector node dist/index.js",
    "inspect-with-auth": "npm run build && npx @modelcontextprotocol/inspector -e ROHLIK_USERNAME=your-email@example.com -e ROHLIK_PASSWORD=your-password node dist/index.js",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^17.2.3",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  }
}